<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@color/colorBackground">


    <ImageView android:id="@+id/relogio"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/relogio"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:elevation="9dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view"
        android:clickable="true"
        card_view:cardBackgroundColor="@color/colorBranco"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="8dp"
        android:layout_marginTop="30dp"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/colorBranco"
            android:orientation="vertical"
            android:layout_gravity="top"
            android:paddingTop="8dp"
            android:paddingLeft="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBranco"
                android:orientation="horizontal">

                <TextView android:id="@+id/dataDiaMes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="04 MarÃ§o"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:layout_weight="0.6"/>

                <TextView android:id="@+id/hora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="18:30"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:layout_marginRight="108dp"
                    android:layout_weight="0.4"/>

            </LinearLayout>

            <TextView android:id="@+id/dataAno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2017"
                android:textSize="16dp"
                android:textStyle="normal"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp">

            <ImageView android:id="@+id/img_evento"
                       android:layout_width="match_parent"
                       android:layout_height="200dp"
                       android:src="@mipmap/ic_launcher"
                       android:scaleType="fitXY"
                       android:adjustViewBounds="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorTaxaNegraTransparente"
                android:layout_gravity="bottom"
                android:padding="8dp">

                <TextView android:id="@+id/nome_evento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nome Evento"
                    android:textColor="@color/colorBranco"
                    android:textSize="21dp"
                    android:textStyle="bold"/>


            </LinearLayout>


        </FrameLayout>






    </android.support.v7.widget.CardView>


</RelativeLayout>